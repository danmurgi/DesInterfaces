<Page
    x:Class="GraficoSector.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GraficoSector"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Template10.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Storyboard x:Name="sb">
            <DoubleAnimation From="0" To="200" Duration="0:0:2" 
                             Storyboard.TargetName="anillo"
                             EnableDependentAnimation="True"
                             Storyboard.TargetProperty="EndAngle"/>
        </Storyboard>
    </Page.Resources>
    
    <Grid>


        <local:Grafico 
            x:Name="graficoPizza"
            Width="500"
            Height="500"/>

        <!--<controls:RingSegment x:Name="anillo" 
                              Radius="200" 
                              StartAngle="0" 
                             
                              Fill="Red">
        

        </controls:RingSegment>-->






    </Grid>
</Page>
